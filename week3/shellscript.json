	"Add Shebang": {
		"scope": "sh",
		"prefix": "shebang",
		"body": [
			"#!/bin/bash",
		],
		"description": "Adds Shebang Script Head"
	},
	"Add_Comment": {
		"scope": "sh",
		"prefix": "comment",
		"body": [
			"# Purpose: ",
			"# Author: Deep Patel ",
			"# LastModified: $CURRENT_DATE/$CURRENT_MONTH/$CURRENT_YEAR"
		],
		"description": "Adds header comment section"
	},
